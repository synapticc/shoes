<form class="ml-2" title="Delete supplier and all its products" method="post" action="{{ path('admin_supplier_delete', {'id': supplier.id}) }}" onsubmit="return confirm('Are you sure you want to delete this supplier?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
