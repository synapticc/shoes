
<div class="col-6 d-flex align-items-center">
  <div class="row justify-content-start">
    {{ form_start(searchForm,
      {'attr': {
        'class': 'd-flex justify-content-start',
        'data-turbo':"false"}}) }}
      <!-- search input -->
      <div class="col-8">
        <div class="input-group">
          <span class="input-group-text" id="topbar-addon"><span class="fas fa-search"></span></span>

          {{ form_widget(searchForm.q, {'attr':
            {'class': 'form-control',
             'placeholder': search ? search : 'Search headline, comment, user or product',
             'aria-label': 'Search',
             'aria-describedby': 'search',
             'title': 'Search headline, comment, user or product',}}) }}
        </div>
      </div>

      <div class="col">
        <!-- search button -->
        <button title="Search for a product by name or by brand" type="submit" class="btn btn-{{ app.user.theme == 'light' ? 'white' : 'gray' }} ml-2 px-2">Search</button>
      </div>
    {{ form_end(searchForm, {render_rest: false}) }}
  </div>
</div>
