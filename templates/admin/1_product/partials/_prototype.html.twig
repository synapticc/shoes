          <a target="_blank"><img class="" src="" data-src="" alt="" id="preview-image"></a>
          <input type="file" id="product_form_productColor___name___image4" name="product_form[colors][__name__][image4]" hidden="hidden" data-image-input data-image-order=4>
          <button id="cancel-image">{% include '__icons/q-t/_square-delete-inv.html.twig' with {'label': 'Remove image', 'dataset': '', 'width': 28, 'height': 28} only %}</button>
          <button id="delete-image">
            <input name="product_form[colors][__name__][delete-image][delete-image4]" type="hidden">
            {% include '__icons/q-t/_square-delete-inv.html.twig' with {'label': 'Delete image', 'dataset': '', 'width': 28, 'height': 28} only %}
          </button>
        </div>
        <!-- Images 5 -->
