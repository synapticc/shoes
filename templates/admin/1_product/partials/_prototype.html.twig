              <!-- Color select -->
              <div class="col-lg-10">
                <select id="product_form_productColor___name___color3" name="product_form[colors][__name__][color3]" data-apply-color data-color-select data-color-order=3 data-label="Choose color 3"><option data-placeholder="true"></option>{% for color in colors %}<option value="{{color.name}}">{{color.fullName}}</option>{% endfor %}</select>
              </div>
              <!-- Color patch -->
              <span title data-color-patch class="col-lg-1" style="background-image: url({{asset('/build/images/empty-image.svg')}} )"></span>
            </div>
          </div>
          <!-- Fabrics & textures -->
          <div class="col-lg-6 pr-4">
            <div class="row">
              <!-- Fabrics -->
              <div>
                <label for="product_form_productColor___name___fabrics" title="Fabrics required">Fabrics</label>
