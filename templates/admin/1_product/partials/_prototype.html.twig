                  data-required
                  data-error="At least one fabric is required."
                  aria-label="Fabrics"
                  aria-describedby="Fabrics"
                  data-placeholder="Choose fabrics"
                  data-selected="Fabrics"
                  data-show-search=true
                  data-search-msg="No record found"
                  data-allow-deselect=false
                  data-search-highlight=true>
                  {% for fabric in fabrics %}<option value="{{fabric.name}}">{{fabric.fullName}}</option>{% endfor %}
                </select>
              </div>
              <!-- Textures -->
              <div class="texture-parent mt-2">
                <label for="product_form_productColor___name___textures" title="Textures optional">Textures</label>
                <select id="product_form_productColor___name___textures" name="product_form[colors][__name__][textures][textures][]" data-textures-select multiple="multiple" data-label="Choose textures">{% for texture in textures %}<option value="{{texture.name}}">{{texture.fullName}}</option>{% endfor %}</select>
