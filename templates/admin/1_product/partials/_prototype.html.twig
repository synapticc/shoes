          <!-- Colors selects -->
          <div class="col-lg-6">
            <input type="hidden" name="product_form[colors][__name__][colorId]">
            <!-- Color 1 -->
            <div class="row align-items-center mb-3" data-mono-color data-color-patch-parent>
