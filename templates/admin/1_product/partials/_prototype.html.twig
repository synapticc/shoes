              </div>
              <!-- Color patch -->
              <span title data-color-patch class="col-lg-1" style="background-image: url({{asset('/build/images/empty-image.svg')}} )"></span>
            </div>
            <!-- Color 2 -->
            <div class="row align-items-center mb-3" data-mono-color data-color-patch-parent>
              <!-- Color select -->
              <div class="col-lg-10">
              <select id="product_form_productColor___name___color2" name="product_form[colors][__name__][color2]" data-apply-color data-color-select data-color-order=2 data-label="Choose color 2"><option data-placeholder="true"></option>{% for color in colors %}<option value="{{color.name}}">{{color.fullName}}</option>{% endfor %}</select>
              </div>
              <!-- Color patch -->
              <span title data-color-patch class="col-lg-1" style="background-image: url({{asset('/build/images/empty-image.svg')}} )"></span>
            </div>
            <!-- Color 3 -->
