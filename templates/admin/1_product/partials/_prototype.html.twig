          <button id="delete-image">
            <input name="product_form[colors][__name__][delete-image][delete-image3]" type="hidden">
            {% include '__icons/q-t/_square-delete-inv.html.twig' with {'label': 'Delete image', 'dataset': '', 'width': 28, 'height': 28} only %}
          </button>
        </div>
        <!-- Images 4 -->
