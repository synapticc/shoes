<form title="Delete product detail" method="post" action="{{ path('admin_product_data_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
