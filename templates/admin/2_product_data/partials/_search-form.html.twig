
<div class="col-6 d-flex align-items-center">
  <div class="row justify-content-start">
    {{ form_start(searchForm,
      {'attr': {
        'class': 'd-flex justify-content-start',
        'data-turbo':'false'}}) }}
      <!-- Search input -->
      <div class="col-6 pr-1">
        <div class="input-group">
          <span class="input-group-text" id="topbar-addon"><span class="fas fa-search"></span></span>
          {{ form_widget(searchForm.q, {'attr':
            {'class': 'form-control',
             'placeholder': search ? search : 'Search product',
             'aria-label': 'Search',
             'aria-describedby': 'search',
             'title': 'Search product',}}) }}
        </div>
        <div class="form-check">
          {{ form_label(
              searchForm._id, null,
              { 'label': 'Detail ID',
                'label_attr':
                  {'title': 'Search product by ID',
                   'class': app.user.theme == 'dark' ? 'form-check-label text-gray-500'}
                }) }}

          {{ form_widget(searchForm._id, {'attr':
            {'class': 'form-check-input',
             'aria-label': 'Check exact search',
             'aria-describedby': 'checkbox',
             'title': 'Search product by ID'}}) }}
        </div>
      </div>
      <!-- Brands select -->
      <div class="col-3 px-0 pr-1">
        {{ form_widget(searchForm.search_brands, {'attr':
            {'aria-label': 'Brands',
             'aria-describedby': 'Brands',
             'slim-select': '',
             'data-placeholder': 'Brands',
             'data-show-search': 'true',
             'data-search-msg': 'No record found.',
             'data-allow-deselect': 'true',
             'data-search-highlight': 'true',
             'data-selected': get.search_brands is defined ? 'Brands',
             }}) }}
      </div>
      <!-- Supplier select -->
      <div class="col-3">
        {{ form_widget(searchForm.search_suppliers, {'attr':
          {'aria-label': 'Suppliers',
           'aria-describedby': 'Suppliers',
           'slim-select': '',
           'data-placeholder': 'Suppliers',
           'data-show-search': 'true',
           'data-search-msg': 'No record found.',
           'data-allow-deselect': 'true',
           'data-search-highlight': 'true',
           'data-selected': get.search_suppliers is defined ? 'Suppliers',}}) }}
      </div>
      <!-- Search button -->
      <div class="col">
        <button title="Search for a product by name or by brand" type="submit" class="btn btn-{{ app.user.theme == 'light' ? 'white' : 'gray' }} ml-2 px-2">Search</button>
      </div>
    {{ form_end(searchForm, {render_rest: false}) }}
  </div>
</div>
