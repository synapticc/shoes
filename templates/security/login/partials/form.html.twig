<main>
  <section class="vh-lg-100 d-flex align-items-center">
    <div class="container">
      <div class="row justify-content-center form-bg-image" data-background-lg="{{asset('build/images/admin/illustrations/signin.svg') }}">
        <div class="col-12 d-flex align-items-center justify-content-center">
          <div class="signin-inner my-3 my-lg-0 bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-500">
            <div class="text-center text-md-center mb-4 mt-md-0">
              <h1 class="mb-0 h3 text-gray">Sign in to our store</h1>
            </div>
            <!-- Form starts -->
            <form method="post" class="mt-4" id="login_form" data-turbo=false>
              {% if error %}
              <div class="alert alert-danger text-white">
                {{ error.messageKey|trans(error.messageData, 'security') }}
              <span class="text-primary">{{error.message}}</span>
              </div>
              {% endif %}

              <!-- Email -->
              <div class="form-group mb-4">
                <label for="inputEmail">Your Email</label>
                <div class="input-group">
                  <span class="input-group-text" id="login-envelope"><span class="fas fa-envelope"></span></span>
                  <input value="{{ last_username }}"
                    name="email"
                    type="email"
                    class="form-control"
                    placeholder="Enter your email"
                    id="inputEmail"
                    autocomplete="email"
                    autofocus required>
                </div>
              </div>
              <!-- Password -->
              <div class="form-group">
                <div class="form-group mb-4">
                  <label for="inputPassword">Your Password</label>
                  <div class="input-group">
                    <span class="input-group-text" id="basic-addon2"><span class="fas fa-unlock-alt"></span></span>
                    <input type="password"
                      name="password"
                      placeholder="Password"
                      class="form-control"
                      id="inputPassword"
                      autocomplete="current-password"
                      required disabled>
                    <span class="input-group-text">
                      <span class="far fa-eye-slash" id="password-eye-icon"></span>
                    </span>
                  </div>
                </div>
                <!-- password check icon -->
                <span id="password-check-icon">{% include '__icons/a-d/_check-icon.html.twig' %}</span>
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <div class="form-check">
                    <input name="_remember_me"
                      class="form-check-input"
                      type="checkbox"
                      value=""
                      id="defaultCheck5"
                      checked>
                    <label class="form-check-label" for="defaultCheck5">Remember me</label>
                  </div>
                  <div><a href="{{ path('forgot_reset_password_request') }}" class="small text-right">Lost password?</a></div>
                </div>
              </div>

              <!-- hidden fields -->
              <input type="hidden" name="_target_path" value="{{ back_to_previous_page }}">
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

              <!-- Submit button -->
              <button type="submit"
                      class="btn btn-block btn-primary"
                      id="sign-in-btn" disabled>Sign in</button>
            </form>
            <!-- Form ends -->
            {% include 'security/login/partials/forgot-password/partials/_register.html.twig'  %}
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- Main ends -->
