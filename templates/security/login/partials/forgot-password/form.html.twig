<main>
  <!-- Section -->
  <section class="vh-lg-100 d-flex align-items-center">
    <div class="container">
      <div class="row justify-content-center form-bg-image" data-background-lg="{{asset('build/images/admin/illustrations/signin.svg') }}">
        <div class="col-12 d-flex align-items-center justify-content-center">
          <div class="signin-inner my-3 my-lg-0 bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-500">
            <div class="text-center text-md-center mb-4 mt-md-0">
              <h1 class="mb-0 h3">Reset your password?</h1>
            </div>
            {{ form_start(resetForm) }}
              <!-- Password -->
              <div class="row justify-content-center">
                <div id="change_password_form_plainPassword">
                  <!-- New Password -->
                  <div class="form-group mb-4">
                    <label for="change_password_form_plainPassword_first">New password</label>
                    <div class="input-group">
                      <span class="input-group-text" id="basic-addon2"><span class="fas fa-unlock-alt"></span></span>
                      <input type="password"
                            id="change_password_form_plainPassword_first"
                            name="change_password_form[plainPassword][first]"
                            placeholder="Enter a new password"
                            class="form-control"
                            autocomplete="current-password"
                            autofocus="on"
                            required>
                      <span class="input-group-text">
                        <span class="far fa-eye-slash" id="password-eye-icon"></span>
                      </span>
                    </div>
                   </div>
                   <!-- Repeat Password -->
                   <div class="form-group mb-4">
                       <label for="change_password_form_plainPassword_second">Repeat password</label>
                       <div class="input-group">
                           <span class="input-group-text" id="basic-addon2"><span class="fas fa-unlock-alt"></span></span>
                           <input type="password"
                              id="change_password_form_plainPassword_second"
                              name="change_password_form[plainPassword][second]"
                              placeholder="Repeat the new password"
                              class="form-control"
                              autocomplete="current-password"
                              autofocus="on"
                              required>
                         <span class="input-group-text">
                           <span class="far fa-eye-slash" id="password-eye-icon"></span>
                         </span>
                       </div>
                   </div>
                 </div>
                  {# <div class="col-md-10">
                    {{ form_label(resetForm.plainPassword, null, {
                        'label': 'Password ',
                        'label_attr': {'class': ''}
                    }) }}
                    {{ form_widget(
                          resetForm.plainPassword,
                              {'attr':
                                {'class': ' ',
                                 'placeholder': 'Enter a new password',
                                 'autocomplete': 'on',
                                 'autofocus':'on' }}) }}
                  </div> #}

                  {# render only the error for password #}
                  {{ form_errors(resetForm.plainPassword) }}
              </div>
              <div class="row justify-content-center mt-3">
                <div class="col-10 text-center">
                 {{ form_widget(resetForm._token,)}}
                  <button class="btn btn-primary">Reset password</button>
                </div>
              </div>
            {{ form_end(resetForm, {render_rest: false}) }}
            {% include 'security/login/partials/forgot-password/partials/_register.html.twig'  %}
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- Main ends -->
