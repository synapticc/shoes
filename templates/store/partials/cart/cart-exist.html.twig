

{% for flash_error in app.flashes('cart_exists')|slice(0, 1) %}
    <div class="container alert alert-warning text-center text-white mt-1" role="alert">
      <div class="row">
        <div class="col">
          <p>{{ flash_error }}</p>
          <p> Do you want to add your recent items to that cart or create a new one?</p>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-2">
          <form class="" method="post">
            <input type="hidden" name="createNew" value="1">
            <button type="submit" class="btn btn-primary">New cart</button>
          </form>
        </div>

        <div class="col-2">
          <form class="" method="post">
            <input type="hidden" name="existingCart" value="1">
            <button type="submit" class="btn btn-primary">Existing cart</button>
          </form>
        </div>
      </div>
    </div>
{% endfor %}
